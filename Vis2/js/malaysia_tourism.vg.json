{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 500,
  "projection": {"type": "equirectangular"},
  "params": [
    {
      "name": "Year_selection",
      "bind": {
      "input": "select",
      "options": [
          null,
          "2020",
          "2021",
          "2022",
          "2023"
      ],
      "labels": [
          "Show Overall",
          "2020",
          "2021",
          "2022",
          "2023"
      ],
      "name": "Year: "
      }
  }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Alicia-hub03/3179/refs/heads/main/Vis2/js/malaysia_states.json",
        "format": {"type": "topojson", "feature": "ne_50m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "#a1e5f7", "stroke": "lightblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Alicia-hub03/3179/refs/heads/main/Vis2/js/malaysia_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_graticules_5"
        }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "#e9e9e9"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Alicia-hub03/3179/refs/heads/main/Vis2/js/malaysia_states.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "transform": [{
                "calculate": "'Neighbouring Country, ' + datum.properties.NAME",
                "as": "note"
            }],
      "mark": {
        "type": "geoshape","fill": "#edeeec", "stroke": "gray", "strokeWidth": 1
      },
      "encoding": { "tooltip": { "field": "note"} }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Alicia-hub03/3179/refs/heads/main/Vis2/js/ne_10m.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
      },
      "mark": {"type": "geoshape", "fill": "#b4ee69", "stroke": "darkolivegreen"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Alicia-hub03/3179/refs/heads/main/Vis2/data/cleanedSOE_lat_long.csv"
      },
      "transform": [{ "filter": "Year_selection == null || datum.year == Year_selection" }],
      "mark": {
        "type": "circle",
        "opacity": 0.7},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "aggregate": "sum",
          "field": "arrivals",
          "type": "quantitative",
          "title": "Total Tourist Arrivals",
          "scale": {
            "type": "threshold",
            "domain": [100, 1000, 10000, 100000, 1000000, 10000000],
            "range": [50, 100, 200, 400, 600, 800, 1200]
          }
        },
        "color": {
          "value": "darkorange"
      },
        "tooltip": [
                  {"field": "state", "type": "nominal", "title": "State"},
                  {"aggregate": "sum","field": "arrivals", "type": "quantitative", "title": "Total Tourist Arrivals", "format":"," }
              ]
      }
    }
  ]
}