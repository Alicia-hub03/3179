{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Malaysia Tourism by State in 2023",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
        "url": "https://raw.githubusercontent.com/Alicia-hub03/3179/refs/heads/main/Week9_homework/js/ne_1%20(2).json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
    },
    "transform": [
      {
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/Alicia-hub03/3179/refs/heads/main/Week9_homework/data/aggregate_msia_state_tourism2023.csv" 
          },
          "key": "state",
          "fields": ["total_arrivals"]
        }
      }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "total_arrivals",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "State"},
        {"field": "total_arrivals", "type": "quantitative"}
      ]
    }
}